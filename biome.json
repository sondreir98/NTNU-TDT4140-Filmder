{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignore": ["package.json", ".vscode"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"correctness": {
				"useImportExtensions": "off"
			},
			"suspicious": {
				"noReactSpecificProps": "off",
				"noConsole": {
					"level": "error",
					"options": {
						"allow": ["error", "info", "warn"]
					}
				}
			}
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	}
}
